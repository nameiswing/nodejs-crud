<html lang="en">
    <head>
        <title>New Project</title>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {{!-- <link rel="stylesheet" href="../css/style.css" /> --}}
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap');
            @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');


            * {
                box-sizing: border-box;
                font-family: "Poppins", sans-serif;
            }
            h1, h2, h3, h4 {
                font-family: "Outfit", sans-serif;
                font-weight: 500;
                color: #444;
            }
            body {
                height: 100vh;
                margin: 0;
                display: flex;
            }
            .create-project-form {
                /* max-width: 28rem; */
                min-width: 28rem;
                margin: auto;
                border-radius: .5rem;
                padding: 0 1.5rem 2rem 1.5rem;
                box-shadow: 0 .125rem .5rem rgba(0,0,0,0.2)
            }
            .create-project-form fieldset {
                display: flex;
                flex-direction: column;
                border: none;
                gap: 1.25rem;
            }
            .create-project-form input[type=submit] {
                border: 0;
                outline: 0;
                padding: .5rem;
                /* margin-top: .75rem; */
                cursor: pointer;
                font-size: 1rem;
                color: white;
                background-color: rgb(19, 174, 236);
                border-radius: .25rem;
                transition: .15s;
            }
            .create-project-form input[type=submit]:hover {
                background-color: rgb(9, 157, 216);
            }
            .input-box {
                display: flex;
                flex-direction: column;
                position: relative;
            }
            .input-box::after {
                display: inline-block;
                content: attr(data-message);
                color: tomato;
                position: absolute;
                left: .25rem;
                bottom: -1.375rem;
                font-size: .875rem;
                white-space: nowrap;
            }
            .input-box input, .input-box textarea{
                padding: .25rem .5rem;
                font-size: 1rem;
                color: #333;
                border: 1px solid #aaa;
                border-radius: .375rem;
            }
            .input-box textarea {
                resize: vertical;
            }
            .input-box .label {
                font-size: .875rem;
                font-weight: 600;
                padding: .25rem .5rem;
                color: #777;
            }
            p {
                margin: 0;
                padding: 0;
                font-size: .875rem;
            }
            a {
                text-decoration: none;
                display: block;
                padding: .5rem;
                color: hsl(197, 85%, 40%);
                background-color: rgb(250, 250, 250);
                border-radius: .25rem;
                transition: .15s;
                text-align: center;
            }
            a:hover {
                background-color: hsl(0, 0%, 95%);
            }
        </style>
    </head>
    <body>
        <form action="/login" method="post" class="create-project-form" >
            <fieldset>
                <legend>
                    <h2>Admin Login</h2>
                </legend>
                <label for="username" aria-label="username" class="input-box">
                    <span class="label">Username:</span>
                    <input type="text" name="username" required="true" minlength="5"/>
                </label>
                <label for="password" aria-label="project summary" class="input-box">
                    <span class="label">Password:</span>
                    <input type="password" name="password" required="true" minlength="5" />
                </label>
                <p style="color:{{color}}">{{message}}&nbsp;</p>
                <div style="display: flex; gap: 1rem; flex-direction:column">
                    <input type="submit" value="Login">
                    {{!-- <a href="/list/projects">View Projects</a> --}}
                </div>
            </fieldset>
        </form>
    </body>
</html>